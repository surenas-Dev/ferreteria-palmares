{
  "compilerOptions": {
    /* OUTPUT & LANGUAGE */
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    /* STRICT MODE */
    "strict": true,
    "noImplicitAny": true,
    /* MODULES & IMPORTS */
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    /* TYPES & DEFINITIONS */
    "types": [
      "react",
      "react-dom",
      "node",
      "next"
    ],
    /* PATH ALIASES */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* PERFORMANCE */
    "noEmit": true,
    "incremental": true,
    /* NEXT.JS PLUGIN */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* INCLUDE */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  /* EXCLUDE */
  "exclude": [
    "node_modules"
  ]
}
